<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListTextSingleChecked"
            android:text="List Text Single Checked" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListTextMultiChecked"
            android:text="List Text Multi Checked" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListTextSingleChoice"
            android:text="List Text Single Choice" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListTextMultiChoice"
            android:text="List Text Multi Choice" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListTextSingleBackground"
            android:text="List Text Single Background" />
            
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListImageSingleChecked"
            android:text="List Image Single Checked" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListImageMultiChecked"
            android:text="List Image Multi Checked" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListImageSingleChoice"
            android:text="List Image Single Choice" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListImageMultiChoice"
            android:text="List Image Multi Choice" />
     
        <Button
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onListImageSingleBackground"
            android:text="List Image Single Background" />
            
    </LinearLayout>
 
</ScrollView>
